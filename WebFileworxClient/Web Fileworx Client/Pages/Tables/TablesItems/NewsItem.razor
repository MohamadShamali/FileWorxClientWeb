@inject NewsServices newsServices

<tr @onclick="() => RowClick.InvokeAsync(News)" class="@GetRowClass()">
    <td class="p-2 border border-gray-300">@News.Title</td>
    <td class="p-2 border border-gray-300">@News.Description</td>
    <td class="p-2 border border-gray-300">@News.Date.ToString()</td>
</tr>

@code {
    [Parameter]
    public News News { get; set; }

    [Parameter]
    public bool IsSelected { get; set; }

    [Parameter]
    public EventCallback<News> RowClick { get; set; }


    private string GetRowClass()
    {
        if (IsSelected)
        {
            return "bg-fw-blue-hover text-white cursor-pointer";
        }

        else
        {
            return "hover:bg-blue-300 cursor-pointer";
        }
    }
}
